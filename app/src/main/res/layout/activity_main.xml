<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView android:text="0"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="50dp"
        android:id="@+id/caculator_text"/>

    <LinearLayout
        android:id="@+id/linear_strut1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/caculator_text"
        android:layout_alignLeft="@id/caculator_text"
        android:layout_alignRight="@id/caculator_text"
        >
        <Button
            android:id="@+id/button_num9"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_below="@id/caculator_text"
            android:text="9"
            />
        <Button
            android:id="@+id/button_num8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_below="@id/caculator_text"
            android:layout_toRightOf="@id/button_num9"
            android:text="8"
            />
        <Button
            android:id="@+id/button_num7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_below="@id/caculator_text"
            android:layout_toRightOf="@id/button_num8"
            android:text="7"
            />
        <Button
            android:id="@+id/button_op_plus"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_below="@id/caculator_text"
            android:layout_toRightOf="@id/button_num7"
            android:text="+"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_strut2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_strut1"
        android:layout_alignLeft="@id/linear_strut1"
        android:layout_alignRight="@id/linear_strut1"
        >
        <Button
            android:id="@+id/button_num6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="6"
            />
        <Button
            android:id="@+id/button_num5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="5"
            />
        <Button
            android:id="@+id/button_num4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="4"
            />
        <Button
            android:id="@+id/button_op_subtraction"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="-"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_strut3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_strut2"
        android:layout_alignLeft="@id/linear_strut2"
        android:layout_alignRight="@id/linear_strut2"
        >
        <Button
            android:id="@+id/button_num3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="3"
            />
        <Button
            android:id="@+id/button_num2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="2"
            />
        <Button
            android:id="@+id/button_num1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="1"
            />
        <Button
            android:id="@+id/button_op_multiplicative"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="ร"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_strut4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_strut3"
        android:layout_alignLeft="@id/linear_strut3"
        android:layout_alignRight="@id/linear_strut3">
        <Button
            android:id="@+id/button_num0"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="0"
            />
        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="."
            />
        <Button
            android:id="@+id/button_op_division"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="รท"
            />
        <Button
            android:id="@+id/button_op_equal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="="
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_strut4"
        android:layout_alignLeft="@id/linear_strut4"
        android:layout_alignRight="@id/linear_strut4">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="C" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Del" />
    </LinearLayout>
</RelativeLayout>
